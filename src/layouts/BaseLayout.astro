---
import '@fontsource-variable/dm-sans';
import '@fontsource/dm-serif-display';
import "../styles/global.css";
import Header from "../components/Header.astro";
import Footer from "../components/Footer.astro";
import Head from "../components/Head.astro";
import { site } from "../data/site";
import ScrollTop from "../components/ScrollTop.astro";

const {
  pageTitle,
  pageDescription,
  pageImage,
  pageUrl,
  ogType,
  noIndex,
} = Astro.props;
const resolvedDescription = pageDescription || site.description;
const resolvedImage = pageImage || site.image || undefined;
const resolvedPath = pageUrl ?? Astro.url?.pathname;
const baseUrl = site.url
  ? site.url.startsWith("http://") || site.url.startsWith("https://")
    ? site.url
    : `https://${site.url}`
  : "";
const resolvedUrl =
  baseUrl && resolvedPath ? new URL(resolvedPath, baseUrl).toString() : baseUrl || undefined;
const imageValue =
  typeof resolvedImage === "string" ? resolvedImage : resolvedImage?.src;
const resolvedImageUrl =
  imageValue && baseUrl && imageValue.startsWith("/")
    ? new URL(imageValue, baseUrl).toString()
    : imageValue;
---

<html lang="sk">
	<head>
		<meta charset="utf-8" />
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<meta name="viewport" content="width=device-width" />
		<meta name="generator" content={Astro.generator} />
		<Head
      title={pageTitle}
      description={resolvedDescription}
      image={resolvedImageUrl}
      url={resolvedUrl}
      siteName={site.title}
      ogType={ogType}
      noIndex={noIndex}
    />
	</head>
	<body>
        <Header />
       
        <slot />
      
        <Footer />
        
        <ScrollTop />
	</body>
</html>
