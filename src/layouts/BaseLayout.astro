---
import "../styles/global.css";
import Header from "../components/Header.astro";
import Footer from "../components/Footer.astro";
import Head from "../components/Head.astro";
import AdBlock from "../components/AdBlock.astro";
import { site } from "../data/site";

const {
  pageTitle,
  pageDescription,
  pageImage,
  pageUrl,
  ogType,
  noIndex,
} = Astro.props;
const resolvedDescription = pageDescription || site.description;
const resolvedImage = pageImage || site.image || undefined;
const resolvedPath = pageUrl ?? Astro.url?.pathname;
const baseUrl = site.url
  ? site.url.startsWith("http://") || site.url.startsWith("https://")
    ? site.url
    : `https://${site.url}`
  : "";
const resolvedUrl =
  baseUrl && resolvedPath ? new URL(resolvedPath, baseUrl).toString() : baseUrl || undefined;
const imageValue =
  typeof resolvedImage === "string" ? resolvedImage : resolvedImage?.src;
const resolvedImageUrl =
  imageValue && baseUrl && imageValue.startsWith("/")
    ? new URL(imageValue, baseUrl).toString()
    : imageValue;
---

<html lang="sk">
	<head>
		<meta charset="utf-8" />
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<meta name="viewport" content="width=device-width" />
		<meta name="generator" content={Astro.generator} />
		<Head
      title={pageTitle}
      description={resolvedDescription}
      image={resolvedImageUrl}
      url={resolvedUrl}
      siteName={site.title}
      ogType={ogType}
      noIndex={noIndex}
    />
	</head>
	<body>
        <Header />
       
        <slot />
      
        <Footer />
        <button
          type="button"
          class="fixed bottom-6 right-6 z-40 inline-flex h-11 w-11 items-center justify-center rounded-full bg-accent text-white shadow-lg opacity-0 pointer-events-none transition-all duration-300 hover:bg-accent/90"
          aria-label="Scroll to top"
          data-scroll-top
        >
          <svg viewBox="0 0 24 24" fill="none" stroke="currentColor" class="h-5 w-5">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 15l7-7 7 7" />
          </svg>
        </button>
        <script>
          const scrollButton = document.querySelector("[data-scroll-top]");
          const showClasses = ["opacity-100", "pointer-events-auto", "-translate-y-1"];
          const hideClasses = ["opacity-0", "pointer-events-none", "translate-y-0"];

          const updateVisibility = () => {
            if (!scrollButton) return;
            if (window.scrollY > 300) {
              scrollButton.classList.remove(...hideClasses);
              scrollButton.classList.add(...showClasses);
              return;
            }
            scrollButton.classList.remove(...showClasses);
            scrollButton.classList.add(...hideClasses);
          };

          scrollButton?.addEventListener("click", () => {
            window.scrollTo({ top: 0, behavior: "smooth" });
          });

          window.addEventListener("scroll", updateVisibility, { passive: true });
          updateVisibility();
        </script>
	</body>
</html>
