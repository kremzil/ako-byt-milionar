---
import BaseLayout from "./BaseLayout.astro";
import { Image } from "astro:assets";

const { frontmatter, prevPost, nextPost, relatedPosts } = Astro.props;
const blogImages = import.meta.glob("../assets/blog/*.{png,jpg,jpeg,webp,avif}", {
  eager: true,
});
const resolveImage = (imageData) => {
  const imagePath =
    typeof imageData === "string" ? imageData : imageData?.src ?? imageData?.url;
  if (!imagePath) return null;
  const imageKey = imagePath.startsWith("../assets/")
    ? imagePath
    : `../assets/blog/${imagePath.split("/").pop()}`;
  const imageModule = blogImages[imageKey];
  return imageModule?.default ?? null;
};

const image = resolveImage(frontmatter.image);
const pageDescription = frontmatter.description?.trim() || undefined;
const pageImage = image?.src;
const pageUrl = Astro.url?.pathname;
const hasPrev = Boolean(prevPost);
const hasNext = Boolean(nextPost);
const relatedCards = (relatedPosts ?? [])
  .slice(0, 2)
  .map((post) => ({ post, image: resolveImage(post.data?.image) }));

const getDate = (value) => {
  if (!value) return null;
  if (value instanceof Date) return value;
  const parsed = new Date(value);
  return Number.isNaN(parsed.getTime()) ? null : parsed;
};

const formatDate = (value) => {
  const parsed = getDate(value);
  if (!parsed) return value ? String(value) : "";
  return new Intl.DateTimeFormat("sk-SK", {
    day: "numeric",
    month: "long",
    year: "numeric",
  }).format(parsed);
};
---

<BaseLayout
  pageTitle={frontmatter.title}
  pageDescription={pageDescription}
  pageImage={pageImage}
  pageUrl={pageUrl}
  ogType="article"
>
  <main class="surface pt-20 pb-16">
    <article class="card mx-auto max-w-170 px-4 pb-12 pt-10 sm:px-6 sm:pb-16 lg:pt-16">
      <div class="eyebrow text-xs text-neutral-500">
        {formatDate(frontmatter.pubDate)}
      </div>
      <h1 class="mt-4 text-4xl font-normal tracking-tight text-neutral-900 sm:text-5xl">
        {frontmatter.title}
      </h1>
      {frontmatter.description && (
        <p class="mt-4 text-lg text-neutral-600">{frontmatter.description}</p>
      )}
      <p class="eyebrow mt-3 text-sm text-neutral-500">
        Autor: <span class="text-neutral-700">{frontmatter.author}</span>
      </p>

      {image && (
        <div class="card mt-8 overflow-hidden shadow-lg">
          <Image
            src={image}
            width={1200}
            sizes="(min-width: 1024px) 768px, 100vw"
            alt={frontmatter.image?.alt ?? frontmatter.title}
            class="h-72 w-full object-cover sm:h-96"
          />
        </div>
      )}

      <div class="mt-10 space-y-6 text-[1.05rem] leading-8 text-neutral-800 [&_h2]:mt-12 [&_h2]:text-3xl [&_h2]:font-normal [&_h3]:mt-8 [&_h3]:text-2xl [&_h3]:font-normal [&_ul]:list-disc [&_ul]:pl-6 [&_ol]:list-decimal [&_ol]:pl-6 [&_blockquote]:border-l-4 [&_blockquote]:border-accent [&_blockquote]:pl-4 [&_blockquote]:text-neutral-600 [&_a]:text-accent [&_a]:underline-offset-4 [&_a]:hover:underline">
        <slot />
      </div>

      {(hasPrev || hasNext) && (
        <nav
          class="mt-12 flex flex-col gap-4 border-t border-neutral-200 pt-8 sm:flex-row"
          aria-label="Post navigation"
        >
          {hasPrev && (
            <a
              href={`/posts/${prevPost.id}/`}
              class="card group flex-1 p-5 transition duration-300 hover:-translate-y-0.5 hover:shadow-md"
            >
              <span class="text-xs uppercase tracking-[0.2em] text-neutral-500">
                &larr; Predchadzajuci prispevok
              </span>
              <span class="mt-2 block text-lg font-semibold text-neutral-900 transition-colors group-hover:text-accent">
                {prevPost.data?.title}
              </span>
            </a>
          )}
          {hasNext && (
            <a
              href={`/posts/${nextPost.id}/`}
              class={`card group flex-1 p-5 text-right transition duration-300 hover:-translate-y-0.5 hover:shadow-md ${
                !hasPrev ? "sm:ml-auto" : ""
              }`}
            >
              <span class="text-xs uppercase tracking-[0.2em] text-neutral-500">
                Nasledujuci prispevok &rarr;
              </span>
              <span class="mt-2 block text-lg font-semibold text-neutral-900 transition-colors group-hover:text-accent">
                {nextPost.data?.title}
              </span>
            </a>
          )}
        </nav>
      )}

      {relatedCards.length > 0 && (
        <section class="mt-12 border-t border-neutral-200 pt-8">
          <div class="flex flex-col gap-3 sm:flex-row sm:items-end sm:justify-between">
            <h2 class="text-2xl font-normal tracking-tight text-neutral-900">
              Suvisejuce prispevky
            </h2>
            <a href="/blog/" class="link-accent text-sm">
              Vsetky prispevky
            </a>
          </div>
          <div class="mt-6 grid gap-6 sm:grid-cols-2">
            {relatedCards.map(({ post, image }) => (
              <article class="card group flex h-full flex-col overflow-hidden">
                <div class="relative aspect-[4/3] w-full overflow-hidden">
                  {image ? (
                    <Image
                      src={image}
                      width={700}
                      sizes="(min-width: 1024px) 520px, (min-width: 640px) 45vw, 100vw"
                      alt={post.data?.image?.alt ?? post.data?.title}
                      class="h-full w-full object-cover transition duration-500 group-hover:scale-[1.03]"
                    />
                  ) : (
                    <div class="h-full w-full bg-gradient-to-br from-surface-alt to-white" />
                  )}
                </div>
                <div class="flex h-full flex-col gap-3 p-5">
                  <div class="eyebrow text-[0.65rem] text-neutral-500">
                    {formatDate(post.data?.pubDate)}
                  </div>
                  <h3 class="text-lg font-semibold leading-snug text-neutral-900">
                    <a
                      href={`/posts/${post.id}/`}
                      class="text-neutral-900 no-underline transition-colors group-hover:text-accent"
                    >
                      {post.data?.title}
                    </a>
                  </h3>
                  {post.data?.description && (
                    <p class="text-sm leading-6 text-neutral-600">
                      {post.data?.description}
                    </p>
                  )}
                  <a
                    href={`/posts/${post.id}/`}
                    class="link-accent mt-auto inline-flex items-center gap-2 text-sm font-semibold"
                  >
                    Citat prispevok
                  </a>
                </div>
              </article>
            ))}
          </div>
        </section>
      )}
    </article>
  </main>
</BaseLayout>
